<!-- ============================================================================
     NAVBAR - COMPONENTE RIUSABILE
     ============================================================================
     Navbar responsive con user info, avatar, e logout button.
     Incluso script inline per caricamento dati utente e logout.
     ========================================================================== -->

<nav class="navbar">
  <div class="navbar-container">
    <!-- ===== MENU TOGGLE MOBILE (SINISTRA) ===== -->
    <!-- Bottone hamburger per aprire sidebar su mobile (visibile solo < 768px) -->
    <button class="menu-toggle" id="menuToggle">
      <i class="fas fa-bars"></i>
    </button>

    <!-- ===== USER INFO (CENTRO) ===== -->
    <!-- Mostra avatar + nome utente, nascosto su mobile (< 768px) -->
    <!-- Cliccabile per tornare a home-utente -->
    <div
      class="navbar-user-info"
      id="userProfileArea"
      style="cursor: pointer"
      title="Clicca per ricaricare"
    >
      <!-- Avatar circolare con INIZIALE del nome -->
      <div class="user-avatar" id="userAvatar">
        <span id="userInitial">M</span>
      </div>

      <!-- Nome e cognome + ruolo utente -->
      <div class="user-details">
        <span class="user-name" id="userNameNavbar">Matteo Rossi</span>
        <span class="user-role">Utente</span>
      </div>
    </div>

    <!-- ===== LOGOUT BUTTON (DESTRA) ===== -->
    <!-- Bottone disconnessione sempre visibile -->
    <div class="navbar-right">
      <button class="logout-btn" id="logoutBtn">
        <i class="fas fa-sign-out-alt"></i>
        <span>Disconnettiti</span>
      </button>
    </div>
  </div>
</nav>

<!-- ============================================================================
     SCRIPT INLINE - NAVBAR LOGIC
     ============================================================================
     Gestisce:
     - Caricamento dati utente all'avvio
     - Aggiornamento nome/avatar nella navbar
     - Redirect al click su profilo
     - Logout con redirect a auth
     ========================================================================== -->
<script>
  /**
   * Mostra snackbar notifica temporanea
   * @param {string} message - Messaggio da mostrare
   * @param {string} type - Tipo: 'success', 'error', 'warning'
   */
  function showSnackbar(message, type = "success") {
    const snackbar = document.getElementById("snackbar");
    if (snackbar) {
      snackbar.textContent = message;
      snackbar.className = `snackbar show snackbar--${type}`;
      setTimeout(() => {
        snackbar.classList.remove("show");
      }, 3000);
    }
  }

  /**
   * Carica dati utente e aggiorna navbar con nome e avatar
   * Eseguito all'avvio della pagina
   */
  async function loadAndUpdateNavbar() {
    try {
      const response = await fetch("/users/me", {
        method: "GET",
        headers: {
          "Content-Type": "application/json",
        },
        credentials: "include",
      });

      if (response.ok) {
        const userData = await response.json();

        // ===== AGGIORNA NOME NAVBAR =====
        // Mostra "Nome Cognome" nella navbar
        const userNameNavbar = document.getElementById("userNameNavbar");
        if (userNameNavbar) {
          userNameNavbar.textContent = `${userData.nome} ${userData.cognome}`;
        }

        // ===== AGGIORNA AVATAR =====
        // Mostra prima lettera del nome in maiuscolo
        const userInitial = document.getElementById("userInitial");
        if (userInitial && userData.nome) {
          userInitial.textContent = userData.nome.charAt(0).toUpperCase();
        }
      } else {
        console.error("❌ Errore caricamento profilo:", response.status);
      }
    } catch (error) {
      console.error("❌ Errore di connessione:", error);
    }
  }

  /**
   * Esegue logout e reindirizza a home
   * Mostra snackbar di conferma, poi redirect dopo 1.5s
   */
  async function logout() {
    showSnackbar("Logout in corso...", "success");

    try {
      const response = await fetch("/auth/logout", {
        method: "GET",
        headers: {
          "Content-Type": "application/json",
        },
        credentials: "include",
      });

      if (response.ok) {
        setTimeout(() => {
          window.location.href = "/";
        }, 1500);
      } else {
        console.error("❌ Errore nel logout dal server");
        showSnackbar("Errore nel logout", "error");
      }
    } catch (error) {
      console.error("❌ Errore di connessione:", error);
      showSnackbar("Errore di connessione", "error");
    }
  }

  // ===== INIT =====
  document.addEventListener("DOMContentLoaded", () => {
    loadAndUpdateNavbar();

    // ===== EVENT LISTENER: Click su profilo =====
    // Redirect a /home-utente per ricaricare la navbar
    const userProfileArea = document.getElementById("userProfileArea");
    if (userProfileArea) {
      userProfileArea.addEventListener("click", () => {
        window.location.href = "/home-utente";
      });
    }

    // ===== EVENT LISTENER: Logout button =====
    const logoutBtn = document.getElementById("logoutBtn");
    if (logoutBtn) {
      logoutBtn.addEventListener("click", logout);
    }
  });
</script>
