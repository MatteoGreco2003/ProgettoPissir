<!DOCTYPE html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mobishare - Login</title>
    <link rel="stylesheet" href="css/styleAuth.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
    />
  </head>

  <body>
    <!-- Main container with animated toggle between login/register forms -->
    <div class="container">
      <!-- ========== LOGIN FORM ========== -->
      <div class="form-box login">
        <form id="loginForm" novalidate>
          <h1>Accedi</h1>

          <!-- Email input with icon -->
          <div class="input-box">
            <input type="email" id="loginEmail" placeholder="Email" required />
            <i class="fa-solid fa-envelope"></i>
          </div>

          <!-- Password input with toggle visibility icon -->
          <div class="input-box password-input-box">
            <input
              type="password"
              id="loginPassword"
              name="loginPassword"
              placeholder="Password"
              required
            />
            <i
              class="fa-solid fa-lock toggle-password"
              data-input="loginPassword"
            ></i>
          </div>

          <!-- Forgot password link - opens recovery modal -->
          <div class="forget-link">
            <a href="#" id="forgotPasswordLink">Hai dimenticato la password?</a>
          </div>

          <!-- Error message container - populated by JS on validation failure -->
          <div id="loginErrors" class="error-messages"></div>
          <button type="submit" class="btn">Accedi</button>
        </form>
      </div>

      <!-- ========== REGISTRATION FORM ========== -->
      <div class="form-box register">
        <form id="registerForm" novalidate>
          <h1>Registrazione</h1>

          <!-- First name input - validated with isValidName() -->
          <div class="input-box">
            <input
              type="text"
              id="registerFirstName"
              placeholder="Nome"
              required
            />
            <i class="fa-solid fa-user"></i>
          </div>

          <!-- Last name input - validated with isValidName() -->
          <div class="input-box">
            <input
              type="text"
              id="registerLastName"
              placeholder="Cognome"
              required
            />
            <i class="fa-solid fa-user"></i>
          </div>

          <!-- Email input - validated with isValidEmail() -->
          <div class="input-box">
            <input
              type="email"
              id="registerEmail"
              placeholder="Email"
              required
            />
            <i class="fa-solid fa-envelope"></i>
          </div>

          <!-- Password input - validated with isValidPassword() (min 8 chars, uppercase, lowercase, number) -->
          <div class="input-box password-input-box">
            <input
              type="password"
              id="registerPassword"
              placeholder="Password"
              required
            />
            <i
              class="fa-solid fa-lock toggle-password"
              data-input="registerPassword"
            ></i>
          </div>

          <!-- Confirm password input - must match registerPassword -->
          <div class="input-box password-input-box">
            <input
              type="password"
              id="confirmPassword"
              placeholder="Conferma Password"
              required
            />
            <i
              class="fa-solid fa-lock toggle-password"
              data-input="confirmPassword"
            ></i>
          </div>

          <!-- Error message container - populated by JS on validation failure -->
          <div id="registerErrors" class="error-messages"></div>
          <button type="submit" class="btn">Registrati</button>
        </form>
      </div>

      <!-- ========== ANIMATED TOGGLE PANEL ========== -->
      <!-- Slides between login and register forms with gradient animation -->
      <div class="toggle-box">
        <!-- Left panel: visible during login, prompts user to register -->
        <div class="toggle-panel toggle-left">
          <h1>Ciao, Benvenuto!</h1>
          <p>Non hai un account?</p>
          <button class="btn register-btn">Registrati</button>
        </div>

        <!-- Right panel: visible during register, prompts user to login -->
        <div class="toggle-panel toggle-right">
          <h1>Bentornato!</h1>
          <p>Hai già un account?</p>
          <button class="btn login-btn">Accedi</button>
        </div>
      </div>
    </div>

    <!-- ========== FORGOT PASSWORD MODAL ========== -->
    <!-- Modal for password recovery - opened by forgotPasswordLink -->
    <div id="forgotPasswordModal" class="modal" style="display: none">
      <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Recupera la tua password</h2>
        <p>
          Inserisci l'email associata al tuo account e ti invieremo un link per
          reimpostare la password.
        </p>

        <form id="forgotPasswordForm" novalidate>
          <!-- Email input for password recovery - validated with isValidEmail() -->
          <div class="input-box">
            <input type="email" id="forgotEmail" placeholder="Email" required />
            <i class="fa-solid fa-envelope"></i>
          </div>

          <!-- Error message container -->
          <div id="forgotErrors" class="error-messages"></div>

          <!-- Success message - shown after successful request, auto-closes after 3s -->
          <div id="forgotSuccess" class="success-message" style="display: none">
            ✅ Se l'email è registrata, riceverai un link per reimpostare la
            password.
          </div>

          <!-- Modal action buttons: Cancel and Submit -->
          <div class="modal-button-group">
            <button
              type="button"
              id="closeForgotBtn"
              class="btn btn-modal-cancel"
            >
              Annulla
            </button>
            <button type="submit" class="btn">Invia link reset</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Scripts: auth logic and API calls -->
    <script src="js/auth.js"></script>
    <script src="js/api.js"></script>
  </body>
</html>
